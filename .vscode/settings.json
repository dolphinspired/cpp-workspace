{
  // Custom settings
  "buildDir": "${workspaceFolder}\\build",
  "buildEntrypoint": "${workspaceFolder}\\main.cpp",
  "buildOutput": "${workspaceFolder}\\build\\main.exe",
  "cwd": "${workspaceFolder}",
  // VSCode settings
  "files.associations": {
    "**\\ucrt64\\include\\c++\\*\\*": "cpp",
    "*.h.in": "c", // to avoid autoformat on save
  },
  "terminal.integrated.defaultProfile.windows": "msys2-ucrt64-zsh",
  "terminal.integrated.profiles.windows": {
    "msys2-ucrt64-zsh": {
      "icon": "terminal-bash",
      "path": "C:\\msys64\\msys2_shell.cmd",
      "args": [
        "-defterm",
        "-here",
        "-no-start",
        "-ucrt64",
        "-shell",
        "zsh",
      ],
    },
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
  },
  "[jsonc]": {
    "editor.detectIndentation": false,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.indentSize": "tabSize",
    "editor.tabSize": 2,
    "files.insertFinalNewline": true,
  },
}
