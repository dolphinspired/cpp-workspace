{
  // Custom settings
  "buildDir": "${workspaceFolder}\\build",
  "buildEntrypoint": "${workspaceFolder}\\main.cpp",
  "buildOutput": "${workspaceFolder}\\build\\main.exe",
  "cwd": "${workspaceFolder}",
  // VSCode settings
  "files.associations": {
    "**\\ucrt64\\include\\c++\\*\\*": "cpp"
  },
  "terminal.integrated.defaultProfile.windows": "bash (MSYS2)",
  "terminal.integrated.profiles.windows": {
    // See: https://stackoverflow.com/a/68253833
    "bash (MSYS2)": {
      "icon": "terminal-bash",
      "path": "C:\\msys64\\usr\\bin\\bash.exe",
      "args": [
        "--login",
        "-i",
      ],
      "env": {
        "MSYSTEM": "MINGW64",
        "CHERE_INVOKING": "1",
      },
    },
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
  },
  "[jsonc]": {
    "editor.detectIndentation": false,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.indentSize": "tabSize",
    "editor.tabSize": 2,
    "files.insertFinalNewline": true,
  },
}
